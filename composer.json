{
  "name": "k3progetti/jwt-bundle",
  "description": "Bundle Symfony per la gestione dei token JWT con supporto a refresh token e logout",
  "type": "symfony-bundle",
  "license": "MIT",
  "authors": [
    {
      "name": "Mattia Vitali",
      "email": "vitali.mattia@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.2",
    "firebase/php-jwt": "^6.11",
    "nesbot/carbon": "^3.0",
    "doctrine/orm": "^2.15",
    "doctrine/doctrine-bundle": "^2.10",
    "symfony/framework-bundle": "^7.0",
    "symfony/http-client": "~7.0",
    "symfony/messenger": "~7.0",
    "symfony/redis-messenger": "~7.0",
    "symfony/validator": "~7.0",
    "symfony/security-bundle": "*",
    "symfony/serializer": "*"
  },
  "autoload": {
    "psr-4": {
      "K3Progetti\\JwtBundle\\": "src/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-main": "1.0-dev"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "@php bin/register-jwt-bundle.php"
    ],
    "post-update-cmd": [
      "@php bin/register-jwt-bundle.php"
    ],
    "pre-package-uninstall": [
      "@php bin/register-jwt-bundle.php --remove"
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
